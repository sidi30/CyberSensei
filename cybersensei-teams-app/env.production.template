# ─────────────────────────────────────────────────────────────────────────────
# Environnement
# ─────────────────────────────────────────────────────────────────────────────
NODE_ENV=production

# ─────────────────────────────────────────────────────────────────────────────
# Microsoft Azure AD Configuration
# ─────────────────────────────────────────────────────────────────────────────
# Obtenez ces valeurs depuis Azure Portal > App registrations
MICROSOFT_APP_ID=00000000-0000-0000-0000-000000000000
MICROSOFT_APP_PASSWORD=your-client-secret-here
MICROSOFT_APP_TENANT_ID=00000000-0000-0000-0000-000000000000

# ─────────────────────────────────────────────────────────────────────────────
# Bot Configuration
# ─────────────────────────────────────────────────────────────────────────────
BOT_ID=00000000-0000-0000-0000-000000000000
BOT_PASSWORD=your-bot-password-here

# ─────────────────────────────────────────────────────────────────────────────
# Backend Configuration
# ─────────────────────────────────────────────────────────────────────────────
# Pour Docker: http://backend:8080
# Pour développement: http://localhost:8080
# Pour production: https://api.votredomaine.com
BACKEND_BASE_URL=http://localhost:8080

# ─────────────────────────────────────────────────────────────────────────────
# Ports
# ─────────────────────────────────────────────────────────────────────────────
BOT_PORT=3978
TABS_PORT=5175
BACKEND_PORT=8080

# ─────────────────────────────────────────────────────────────────────────────
# Base de données (pour profile full)
# ─────────────────────────────────────────────────────────────────────────────
POSTGRES_DB=cybersensei
POSTGRES_USER=cybersensei
POSTGRES_PASSWORD=changez-moi-en-production

# ─────────────────────────────────────────────────────────────────────────────
# Sécurité
# ─────────────────────────────────────────────────────────────────────────────
JWT_SECRET=votre-secret-jwt-minimum-32-caracteres

# ─────────────────────────────────────────────────────────────────────────────
# SSO Configuration
# ─────────────────────────────────────────────────────────────────────────────
ENABLE_SSO=true

# ─────────────────────────────────────────────────────────────────────────────
# Domaine
# ─────────────────────────────────────────────────────────────────────────────
DOMAIN_SUFFIX=local

# ─────────────────────────────────────────────────────────────────────────────
# Hostname Teams (pour le manifest)
# ─────────────────────────────────────────────────────────────────────────────
HOSTNAME=localhost:5175
