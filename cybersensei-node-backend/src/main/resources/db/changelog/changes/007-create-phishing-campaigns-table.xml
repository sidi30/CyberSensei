<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="007-create-phishing-campaigns-table" author="cybersensei">
        <createTable tableName="phishing_campaigns">
            <column name="id" type="bigserial" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="template_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="sent_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="total_sent" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="total_clicked" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="total_opened" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="total_reported" type="integer" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="phishing_campaigns"
                baseColumnNames="template_id"
                constraintName="fk_campaign_template"
                referencedTableName="phishing_templates"
                referencedColumnNames="id"/>

        <createIndex tableName="phishing_campaigns" indexName="idx_campaign_template">
            <column name="template_id"/>
        </createIndex>

        <createIndex tableName="phishing_campaigns" indexName="idx_campaign_date">
            <column name="sent_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>


