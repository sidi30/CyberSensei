<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-user-exercise-results-table" author="cybersensei">
        <createTable tableName="user_exercise_results">
            <column name="id" type="bigserial" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="exercise_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="score" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="success" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="details_json" type="jsonb"/>
            <column name="date" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="user_exercise_results"
                baseColumnNames="user_id"
                constraintName="fk_result_user"
                referencedTableName="users"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="user_exercise_results"
                baseColumnNames="exercise_id"
                constraintName="fk_result_exercise"
                referencedTableName="exercises"
                referencedColumnNames="id"/>

        <createIndex tableName="user_exercise_results" indexName="idx_result_user">
            <column name="user_id"/>
        </createIndex>

        <createIndex tableName="user_exercise_results" indexName="idx_result_exercise">
            <column name="exercise_id"/>
        </createIndex>

        <createIndex tableName="user_exercise_results" indexName="idx_result_date">
            <column name="date"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>


