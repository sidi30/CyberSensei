<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-ai-profiles-table" author="cybersensei">
        <createTable tableName="ai_profiles">
            <column name="id" type="bigserial" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="style" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="weaknesses_json" type="jsonb"/>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="ai_profiles"
                baseColumnNames="user_id"
                constraintName="fk_ai_profile_user"
                referencedTableName="users"
                referencedColumnNames="id"/>

        <createIndex tableName="ai_profiles" indexName="idx_ai_profile_user" unique="true">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>


