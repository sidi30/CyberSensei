<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="phishing-007-create-settings-smtp" author="cybersensei">
        <comment>Create settings_smtp table for SMTP configuration</comment>
        
        <createTable tableName="settings_smtp">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)" defaultValue="default">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="host" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="port" type="INTEGER" defaultValue="587">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)"/>
            <column name="password_encrypted" type="TEXT"/>
            <column name="from_email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="from_name" type="VARCHAR(255)"/>
            <column name="reply_to" type="VARCHAR(255)"/>
            <column name="tls_enabled" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="ssl_enabled" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="max_rate_per_minute" type="INTEGER" defaultValue="30">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="last_test_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="last_test_success" type="BOOLEAN"/>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>

