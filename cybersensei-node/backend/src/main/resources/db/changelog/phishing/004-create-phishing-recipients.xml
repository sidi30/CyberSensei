<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="phishing-004-create-phishing-recipients" author="cybersensei">
        <comment>Create phishing_recipients table for tracking email recipients</comment>
        
        <createTable tableName="phishing_recipients">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="campaign_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_recipient_campaign" 
                    references="phishing_campaigns(id)" deleteCascade="true"/>
            </column>
            <column name="campaign_run_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_recipient_run" 
                    references="phishing_campaign_runs(id)" deleteCascade="true"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(100)"/>
            <column name="last_name" type="VARCHAR(100)"/>
            <column name="department" type="VARCHAR(100)"/>
            <column name="token" type="VARCHAR(128)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_recipient_token"/>
            </column>
            <column name="sent_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="delivered_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="status" type="VARCHAR(50)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
            <column name="error_message" type="TEXT"/>
            <column name="retry_count" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="phishing_recipients" indexName="idx_recipients_token">
            <column name="token"/>
        </createIndex>
        
        <createIndex tableName="phishing_recipients" indexName="idx_recipients_campaign">
            <column name="campaign_id"/>
        </createIndex>
        
        <createIndex tableName="phishing_recipients" indexName="idx_recipients_run">
            <column name="campaign_run_id"/>
        </createIndex>
        
        <createIndex tableName="phishing_recipients" indexName="idx_recipients_user">
            <column name="user_id"/>
        </createIndex>
        
        <createIndex tableName="phishing_recipients" indexName="idx_recipients_status">
            <column name="status"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

