<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="phishing-009-create-audit-logs" author="cybersensei">
        <comment>Create audit_logs table for security audit trail</comment>
        
        <createTable tableName="phishing_audit_logs">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="action" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="entity_type" type="VARCHAR(100)"/>
            <column name="entity_id" type="UUID"/>
            <column name="actor_user_id" type="UUID"/>
            <column name="actor_email" type="VARCHAR(255)"/>
            <column name="actor_ip" type="VARCHAR(45)"/>
            <column name="details" type="JSONB" defaultValue="{}"/>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="phishing_audit_logs" indexName="idx_audit_action">
            <column name="action"/>
        </createIndex>
        
        <createIndex tableName="phishing_audit_logs" indexName="idx_audit_entity">
            <column name="entity_type"/>
            <column name="entity_id"/>
        </createIndex>
        
        <createIndex tableName="phishing_audit_logs" indexName="idx_audit_actor">
            <column name="actor_user_id"/>
        </createIndex>
        
        <createIndex tableName="phishing_audit_logs" indexName="idx_audit_created">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

