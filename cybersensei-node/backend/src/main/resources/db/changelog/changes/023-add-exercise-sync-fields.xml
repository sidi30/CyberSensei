<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="023-1" author="cybersensei">
        <comment>Add sync fields to exercises table for Central integration</comment>

        <addColumn tableName="exercises">
            <column name="central_id" type="varchar(255)">
                <constraints nullable="true" unique="true"/>
            </column>
        </addColumn>

        <addColumn tableName="exercises">
            <column name="version" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="exercises">
            <column name="synced_at" type="timestamp">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="exercises">
            <column name="created_at" type="timestamp" defaultValueComputed="NOW()">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="exercises">
            <column name="updated_at" type="timestamp" defaultValueComputed="NOW()">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <createIndex tableName="exercises" indexName="idx_exercise_central_id">
            <column name="central_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="023-2" author="cybersensei">
        <comment>Set default version for existing exercises</comment>
        <sql>
            UPDATE exercises SET version = '1.0.0' WHERE version IS NULL;
            UPDATE exercises SET created_at = NOW() WHERE created_at IS NULL;
            UPDATE exercises SET updated_at = NOW() WHERE updated_at IS NULL;
        </sql>
    </changeSet>

</databaseChangeLog>
