<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="011-create-logs-table" author="cybersensei">
        <createTable tableName="logs">
            <column name="id" type="bigserial" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="timestamp" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="level" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="logger" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="thread" type="varchar(100)"/>
            <column name="user_id" type="bigint"/>
            <column name="request_id" type="varchar(100)"/>
            <column name="ip_address" type="varchar(45)"/>
            <column name="user_agent" type="varchar(500)"/>
            <column name="endpoint" type="varchar(255)"/>
            <column name="method" type="varchar(10)"/>
            <column name="status_code" type="integer"/>
            <column name="duration_ms" type="integer"/>
            <column name="exception" type="text"/>
            <column name="stack_trace" type="text"/>
        </createTable>

        <createIndex tableName="logs" indexName="idx_logs_timestamp">
            <column name="timestamp"/>
        </createIndex>

        <createIndex tableName="logs" indexName="idx_logs_level">
            <column name="level"/>
        </createIndex>

        <createIndex tableName="logs" indexName="idx_logs_user_id">
            <column name="user_id"/>
        </createIndex>

        <createIndex tableName="logs" indexName="idx_logs_request_id">
            <column name="request_id"/>
        </createIndex>

        <addForeignKeyConstraint
                baseTableName="logs"
                baseColumnNames="user_id"
                constraintName="fk_logs_user"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="SET NULL"/>
    </changeSet>

</databaseChangeLog>


